<?xml version="1.0" encoding="utf-8"?>

<!--
 -   SINGLE ITEM OF THE COLOR PICKER DIALOG
 -->

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="@dimen/color_picker_item_padding">

    <!-- COLORED CIRCLE -->
    <ImageView
        style="@style/ColorPickerItem"
        android:id="@+id/color_picker_item"
        android:layout_width="@dimen/color_picker_item_size"
        android:layout_height="@dimen/color_picker_item_size"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="@string/form_title_color"/>

    <!-- SELECTED ICON -->
    <ImageView
        android:id="@+id/color_picker_selected_icon"
        android:layout_width="@dimen/color_picker_item_size"
        android:layout_height="@dimen/color_picker_item_size"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:contentDescription="@string/form_title_color"/>

</FrameLayout>