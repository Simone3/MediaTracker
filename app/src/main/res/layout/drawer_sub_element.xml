<?xml version="1.0" encoding="utf-8"?>

<!--
 -   SINGLE ELEMENT OF THE NAVIGATION DRAWER
 -->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_element_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawer_item_background"
    android:paddingStart="@dimen/drawer_sub_item_padding"
    android:paddingEnd="@dimen/drawer_sub_item_padding">

    <!-- ICON -->
    <ImageView
        android:id="@+id/drawer_element_icon"
        android:layout_width="@dimen/drawer_icon_size"
        android:layout_height="@dimen/drawer_icon_size"
        android:paddingLeft="@dimen/drawer_icon_padding"
        android:paddingTop="@dimen/drawer_icon_padding"
        android:paddingRight="@dimen/drawer_icon_padding"
        android:paddingBottom="@dimen/drawer_icon_padding"
        android:contentDescription="@string/navigation_drawer_icon"
        android:layout_gravity="center"/>

    <!-- NAME -->
    <TextView
          android:id="@+id/drawer_element_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textAppearance="?android:attr/textAppearanceListItemSmall"
          android:gravity="center_vertical"
          android:paddingLeft="@dimen/drawer_text_padding"
          android:paddingRight="@dimen/drawer_text_padding"
          android:textColor="#000000"
          android:minHeight="?android:attr/listPreferredItemHeightSmall"
          android:textSize="@dimen/drawer_text_size"
          android:layout_gravity="center"/>

</LinearLayout>